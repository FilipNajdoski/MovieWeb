@model MovieWeb.Data.Entities.Person

@{
    ViewData["Title"] = "Create";
}

    <div class="container">
        <h4>Create new Person</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PersonName" class="control-label"></label>
                        <input asp-for="PersonName" class="form-control" placeholder="First and Last Name"/>
                        <span asp-validation-for="PersonName" class="text-danger"></span>
                    </div>
                    <div class="form-group">                        
                        <label asp-for="Biography" class="control-label"></label>
                        <textarea asp-for="Biography" class="form-control" placeholder="Enter short biography..."></textarea>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" placeholder="male/female"/>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaceOfBirth" class="control-label"></label>
                        <input asp-for="PlaceOfBirth" class="form-control" placeholder="city/country"/>
                        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfDeath" class="control-label"></label>
                        <input asp-for="DateOfDeath" class="form-control" />
                        <span asp-validation-for="DateOfDeath" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IMDBPersonLink" class="control-label"></label>
                        <input asp-for="IMDBPersonLink" class="form-control" placeholder="Enter a valid URL"/>
                        <span asp-validation-for="IMDBPersonLink" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-alt-circle-left"></i>Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
