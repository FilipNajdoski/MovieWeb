@model MovieWeb.Data.Entities.Genre

@{
    ViewData["Title"] = "Create";
}
    <div class="container">
        <h4>Create new Genre</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="GenreName" class="control-label"></label>
                        <input asp-for="GenreName" class="form-control" placeholder="Enter new genre"/>
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    
                        <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-alt-circle-left"></i>Back to List</a>
                    </div>
                </form>
            </div>
        </div>

        
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
